{
    "id": "nl.nu.headlines",
    "name": {
        "en": "NU.nl news",
		"nl": "NU.nl nieuws"
    },
    "description": {
    	"en": "This app makes Homey read the headlines of the Dutch news site NU.nl.",
    	"nl": "Deze app laat Homey de koppen voorlezen van de Nederlandse nieuwssite NU.nl."
    },
    "images": {
		"large": "./assets/images/large.jpg",
		"small": "./assets/images/small.jpg"
	},
	"category": "internet",
    "version": "1.0.0",
    "compatibility": "1.x",
    "author": {
        "name": "Gerard Nijboer",
        "email": "me@gerardnijboer.com"
    },
    "tags": {
    	"en": ["news", "nu.nl", "dutch", "netherlands", "entertainment"],
    	"nl": ["nieuws", "nu.nl", "nederlands", "nederland", "entertainment"]
    },
	"permissions": [
		"homey:manager:speech-output"
	],
	"flow": {
		"actions": [
			{
				"id": "nl_nu_read_news",
				"title": {
					"nl": "Lees het nieuws voor van NU.nl",
					"en": "Read the news from NU.nl"
				},
				"args": [
					{
						"name": "category",
						"type": "dropdown",
						"values": [
							{
								"id": "algemeen",
								"label": {
									"en": "General",
									"nl": "Algemeen"
								}
							},
							{
