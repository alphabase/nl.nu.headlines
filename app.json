{
    "id": "nl.nu.headlines",
    "name": {
        "en": "NU.nl news",
		"nl": "NU.nl nieuws"
    },
    "description": {
    	"en": "This app makes Homey read the headlines of the Dutch news site NU.nl.",
    	"nl": "Deze app laat Homey de koppen voorlezen van de Nederlandse nieuwssite NU.nl."
    },
    "images": {
		"large": "./assets/images/large.jpg",
		"small": "./assets/images/small.jpg"
	},
	"category": "internet",
    "version": "1.0.3",
    "compatibility": "1.x",
    "author": {
        "name": "Gerard Nijboer",
        "email": "me@gerardnijboer.com"
    },
    "tags": {
    	"en": ["news", "nu.nl", "dutch", "netherlands", "entertainment", "rss", "internet", "feed"],
    	"nl": ["nieuws", "nu.nl", "nederlands", "nederland", "entertainment", "rss", "internet", "overzicht"]
    },
	"permissions": [
		"homey:manager:speech-output",
		"homey:manager:speech-input"
	],
	"flow": {
		"actions": [
			{
				"id": "nl_nu_read_news",
				"title": {
					"nl": "Lees het nieuws voor",
					"en": "Read the news"
				},
				"args": [
					{
						"name": "category",
						"type": "dropdown",
						"values": [
							{
								"id": "algemeen",
								"label": {
									"en": "General",
									"nl": "Algemeen"
								}
							},
							{
								"id": "economie",
								"label": {
									"en": "Economy",
									"nl": "Economie"
								}
							},
							{
								"id": "internet",
								"label": {
									"en": "Internet",
									"nl": "Internet"
								}
							},
							{
								"id": "sport",
								"label": {
									"en": "Sports",
									"nl": "Sport"
								}
							},
							{
								"id": "achterklap",
								"label": {
									"en": "Gossip",
									"nl": "Achterklap"
								}
							},
							{
								"id": "opmerkelijk",
								"label": {
									"en": "Remarkable",
									"nl": "Opmerkelijk"
								}
							},
							{
								"id": "muziek",
								"label": {
									"en": "Music",
									"nl": "Muziek"
								}
							},
							{
								"id": "dvd",
								"label": {
									"en": "DVD",
									"nl": "DVD"
								}
							},
							{
								"id": "film",
								"label": {
									"en": "Films",
									"nl": "Film"
								}
							},
							{
								"id": "boek",
								"label": {
									"en": "Books",
									"nl": "Boek"
								}
							},
							{
								"id": "games",
								"label": {
									"en": "Games",
									"nl": "Games"
								}
							},
							{
								"id": "lifehacking",
								"label": {
									"en": "Lifehacking",
									"nl": "Lifehacking"
								}
							},
							{
								"id": "plugged",
								"label": {
									"en": "Plugged",
									"nl": "Plugged"
								}
							},
							{
								"id": "auto",
								"label": {
									"en": "Cars",
									"nl": "Auto"
								}
							},
							{
								"id": "wetenschap",
								"label": {
									"en": "Science",
									"nl": "Wetenschap"
								}
							},
							{
								"id": "gezondheid",
								"label": {
									"en": "Health",
									"nl": "Gezondheid"
								}
							}
						]
					},
					{
						"name": "content",
						"type": "dropdown",
						"values": [
							{
								"id": "title",
								"label": {
									"en": "Titles",
									"nl": "Titels"
								}
							},
							{
								"id": "description",
								"label": {
									"en": "Titles and descriptions",
									"nl": "Titels en omschrijvingen"
								}
							}
						]
					},
					{
						"name": "max",
						"type": "number",
						"min": 0,
						"placeholder": {
							"nl": "Max items (0=alles)",
							"en": "Max items (0=all)"
						}
					}
				]
			}
		]
	},
	"speech": [
		{
			"id": "news",
			"importance": 1,
			"triggers": {
				"en": [ "news", "news items", "latest news" ],
				"nl": [ "nieuws", "nieuwsberichten", "laatste nieuws" ]
			}
		},
		{
			"id": "news_category",
			"importance": 0.6,
			"triggers": {
				"en": [ "algemeen", "economie", "internet", "sport", "achterklap", "opmerkelijk", "muziek", "dvd", "film", "boek", "games", "lifehacking", "plugged", "auto", "wetenschap", "gezondheid" ],
				"nl": [ "algemeen", "economie", "internet", "sport", "achterklap", "opmerkelijk", "muziek", "dvd", "film", "boek", "games", "lifehacking", "plugged", "auto", "wetenschap", "gezondheid" ]
			}
		}
	],
	"speechexamples": [
		{
			"en": "Read me the news",
			"nl": "Lees het nieuws voor"
		},
		{
			"en": "Is there any news?",
			"nl": "Is er nog nieuws?"
		},
		{
			"en": "What is the news in the sport section?",
			"nl": "Wat is het nieuws in de sport categorie?"
		},
		{
			"en": "Would you please read me news from the category games?",
			"nl": "Wil je me alsjeblieft het nieuws uit de categorie games voorlezen?"
		}
	]
}